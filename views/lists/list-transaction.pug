mixin my-transaction(txId, time, addrFrom, addrTo)
  .row
    .col-sm-4
      .d-flex.align-items-sm-center
        .d-none.d-sm-flex
          div.mr-1.circle Tx
        
        .d-flex.d-sm-block
          span(style={'white-space': 'nowrap'}).d-inline-block.d-sm-none TX#&nbsp;
          a(href=`/tx/${txId}` title='transaction id').nav-link.mb-0.mb-0.p-0.tag-transaction #{txId}
          span.d-none.d-sm-block.time #{time}
    .col-sm-8
      .d-flex.justify-content-between
        div(style={'max-width': '100%'})
          .transaction-addr
            span(style={'white-space': 'nowrap'}) From 
              a(href=`/address/${addrFrom}`) #{addrFrom?addrFrom:'...'}
          .transaction-addr
            span(style={'white-space': 'nowrap'}) To 
              -if(transactions[i].target.type === 'token'){
                a(href=`/tokens/${addrTo.link}`) #{addrTo?addrTo.link:'...'}
              -} else if(transactions[i].target.type === 'store') {
                a(href=`/stores/${addrTo.link}`) #{addrTo?addrTo.link:'...'}
              -} else {
                a(href=`/address/${addrTo.link}`) #{addrTo?addrTo.link:'...'}
              -}
  hr

