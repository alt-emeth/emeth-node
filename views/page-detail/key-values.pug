extends ../layout
block content
  div#wrapper
    include ../common/navbar
    div.container#content.p-sm-0.token-detail.kv-page
      span.h4.content.font-weight-bold #{title}
        span.ml-3.symbol #{keyValues?keyValues.storeName:''}
      -if(!keyValues){
        h3.text-center Data empty
      -} else {
        .row.content-tab.mt-5
          .col
            .box-detail
              div.d-flex.my-3
                div.mb-3.mr-auto 
                  div
                    select#select-limit.custom-select(onchange="handleChangeLimit()")
                      -for(collection of keyValues.collections){
                        option(value='0') #{collection}
                      -}
              .d-flex.justify-content-center
                .box-table
                  form
                    .form-group.row
                      .col-sm-5
                        label.col-form-label.font-weight-bold Key
                      .col-sm-7
                        span.font-weight-bold.text-truncate.hash-tag Value
                    hr
      -}
    div.w-100(style={"margin-top": "50px"})
      include ../common/footer
  style.
    body {
      background-color: #f5f5f5;
    }
