-if(!txEvents){
  div.text-center Data Empty
-} else {
  -for(txEvent of txEvents){
    - var topics = txEvent.topics || []
    - var decodedData = txEvent.decode.decodedData || []
    form
      hr
      .form-group.row
        .col-sm-2.text-sm-left
          label.col-form-label.font-weight-bold Address:
        .col-sm-10
          span.text-truncate.hash-tag.mx-2
            a(href=`/address/${txEvent.address}`) #{txEvent.address}
      .form-group.row
        .col-sm-2.text-sm-left
          label.col-form-label Topics:
        .col-sm-10
          -for(let i = 0; i<topics.length; i++){
            -if(!topics[i]) {
              - break
            -}
            div
              span.text-truncate.hash-tag 
                .badge.badge-light.mx-2 #{i}
                | #{topics[i]}
          -}
      .form-group.row
        .col-sm-2.text-sm-left
          label.col-form-label Data:
        .col-sm-10
          include ../common/convert-radix.pug
  -}
-}
